<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@drawable/backpik"
    tools:context=".Hairproducts.HaircareProducts">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:gravity="start"
            android:text="Hair Care"
            android:textAlignment="textStart"
            android:textColor="#F44336"
            android:textSize="40dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/sprybtn"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Hair spray/gel"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textAlignment="center"
            android:backgroundTint="@color/white"/>

        <Button
            android:id="@+id/oilbtn"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="oil"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textAlignment="center"
            android:backgroundTint="@color/white"/>

        <Button
            android:id="@+id/shmpobtn"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="shampoo"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textAlignment="center"
            android:backgroundTint="@color/white"/>

    </LinearLayout>



</RelativeLayout>