<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@drawable/backpik"
    tools:context=".facecreams.FaceCreams">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:gravity="start"
            android:text="Face Creams"
            android:textAlignment="textStart"
            android:textColor="#F44336"
            android:textSize="40dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/creambtn"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="MOISTURIZER CREAMS"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textAlignment="center"
            android:backgroundTint="@color/white"/>

        <Button
            android:id="@+id/gelbtn"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="SHAVING CREAMS/GEL"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textAlignment="center"
            android:backgroundTint="@color/white"/>

        <Button
            android:id="@+id/whiteningbtn"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="WHITENING CREAM"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textAlignment="center"
            android:backgroundTint="@color/white"/>



    </LinearLayout>


</RelativeLayout>